<%= h(flash[:notice]) %>
<div class="container">
  <div class="row">

    <%= render 'books/form', user: current_user %>

    <section class="col-lg-9">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg", :size =>'40x40' %></td>
              <td><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
          <%= paginate @books, class: "paginate" %>
        </tbody>
      </table>
    </section>
  </div>
</div>